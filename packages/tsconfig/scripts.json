{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Scripts",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  }
}
